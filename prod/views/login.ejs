<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image" href="Logos/logo_FDE.svg">
    <link rel="stylesheet" href="css/style2.css">
    <title>FDE : Connexion</title>
</head>

<body>
    <div class="wrapper">
        <%- include('partials/header') %>
        <main>
            <div class="container">
                <div class="form-box_login">
                    <div class="login-container">
                        <form name="login-form" action="requests/verifLogin" method="post" onsubmit="return validateForm()">
                            <div class="top">
                                <header>Se connecter</header>
                                <span>Vous ne possédez pas de compte ? <a href="register.php" onclick="register()">S'inscrire</a></span>
                                <div class="error_msg" id="error_msg">
                                    <% if (error_msg != ""){ %>
                                        <%= error_msg %>
                                    <% } %>
                                </div>
                            </div>
                            <div class="input-box">
                                <input type="text" name="login" class="input-field" id="login" width="40%" placeholder="Login">
                                <i class="bx bx-user"></i>
                            </div>
                            <div class="input-box">
                                <input type="password" name="password" class="input-field" id="password" placeholder="Mot de passe">
                                <i class="bx bx-lock-alt"></i>
                            </div>
                            <div class="input-box">
                                <button class="submit" id="submit">Connexion</button>
                            </div>
                            <div class="two-col">
                                <div class="one">
                                </div>
                                <div class="two">
                                    <label><a href="forgot_pwd.php">Mot de passe oublié ?</a></label>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    
    <script>
        // Check if form fields are empty
        function validateForm(){
            var login_field = document.forms["login-form"]["login"].value;
            var pwd_field = document.forms["login-form"]["password"].value;
            if (login_field == ""){
                alert("Le champ \"Login\" est vide.\nVeuillez le remplir.");
                return false;
            }
            else if (pwd_field == ""){
                alert("Le champ \"Mot de passe\" est vide.\nVeuillez le remplir.");
                return false;
            }
            //return true;
        }
    </script>
</body>
</html>
